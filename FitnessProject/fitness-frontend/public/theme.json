{
  "palette": {
    "mode": "dark",
    "primary": {
      "main": "#ff6b81",
      "contrastText": "#ffffff"
    },
    "secondary": {
      "main": "#1e90ff",
      "contrastText": "#ffffff"
    },
    "background": {
      "default": "#1E1E20",
      "paper":   "#343541"
    },
    "text": {
      "primary":   "#ffffff",
      "secondary": "#cccccc"
    }
  },

  "components": {
    "MuiCssBaseline": {
      "styleOverrides": {
        "body": {
          "backgroundImage":  "url('/images/dashboard-bg.jpg')",
          "backgroundSize":   "cover",
          "backgroundPosition": "center"
        },
        ".recharts-responsive-container": {
          "margin": "0 auto !important",
          "maxWidth": "80% !important"
        }
      }
    },

    "MuiAppBar": {
      "styleOverrides": {
        "colorPrimary": {
          "backgroundColor": "#ff6b81",
          "color":           "#ffffff"
        }
      }
    },

    "MuiCard": {
      "styleOverrides": {
        "root": {
          "backgroundColor": "#343541",
          "borderRadius":    "8px",
          "boxShadow":       "0px 2px 4px rgba(0,0,0,0.3)"
        }
      }
    },

    "MuiCardHeader": {
      "styleOverrides": {
        "title":     { "color": "#ffffff" },
        "subheader": { "color": "#cccccc" }
      }
    },

    "MuiCardContent": {
      "styleOverrides": {
        "root": {
          "display":        "flex",
          "flexDirection":  "column",
          "alignItems":     "center",
          "justifyContent": "center",
          "padding":        "16px"
        }
      }
    },

    "MuiInputLabel": {
      "styleOverrides": {
        "root": { "color": "#ffffff" }
      }
    },

    "MuiOutlinedInput": {
      "styleOverrides": {
        "input": { "color": "#ffffff" }
      }
    },

    "MuiSelect": {
      "styleOverrides": {
        "select": { "color": "#ffffff" },
        "icon":   { "color": "#ffffff" }
      }
    }
  },

  "images": {
    "landingBg":   "/images/theme2.jpg",
    "dashboardBg": "/images/dashboard-bg.jpg",
    "profileBg":   "/images/theme222.webp"
  },

  "fonts": {
    "default": "Montserrat, sans-serif",
    "header":  "Playfair Display, serif"
  },

  "shadows": {
    "buttonText": "0px 1px 3px rgba(0,0,0,0.8)",
    "buttonBox":  "0px 2px 4px rgba(0,0,0,0.3)"
  }
}